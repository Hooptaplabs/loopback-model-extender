{
  "extends": "loopback",
  "parserOptions": {
    "ecmaVersion" : 6,
    "sourceType" : "module"
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "rules": {
    "max-len": [2, 100, 4, {
      "ignoreComments": true,
      "ignoreUrls": true,
      "ignorePattern": "^\\s*var\\s.+=\\s*(require\\s*\\()|(/)"
    }],
    "indent": [2, "tab"],
    "padded-blocks": 0,
    "no-multiple-empty-lines": [2, {"max": 2}],
    "comma-dangle": [2, "never"]
  }
}
